{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Playwright Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@playwright/test/lib/cli.js",
        "args": ["test", "--project=chromium"],
        "cwd": "${workspaceFolder}",
        "env": {
          "DEBUG": "pw:api"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  